#include <iostream>
using namespace std;

int main()
{
	int n,x, max , min;
	while (true)
	{
		cout << "Enter N\n";
		cin >> n;
		cout << "Enter number\n";
		cin >> x;
		max = x;
		min = x;
		for (int i = 1; i < n; i++)
		{
			
			cin >> x;
			if (x < min)
			{
				min = x;
			}
			if (x > max)
			{
				max = x;
			}


		}
		cout << " The max is " << max << "  the min is " << min << " and the sum is " << min + max;
		cout << endl << endl;


	}

}
