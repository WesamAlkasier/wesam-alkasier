#include <iostream>
using namespace std;

int main()
{
	int n, x;
	while (true)
	{
		cout << "Enter N\n";
		cin >> n;
		x = n / 2;
		for (int i = n; i >=1; i--)
		{
			for (int k = 0; k < n-i; k++)
			{
				cout << " ";
			}
			for (int k = 0; k < i; k++)
			{
				cout << "*";
			}
			cout << endl;
			
		}
		cout << endl << endl;

			
	}
	
}
